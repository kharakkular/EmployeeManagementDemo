@model IEnumerable<IdentityRole>

@{ 
    ViewBag.Title = "All Roles";
}

@if (Model.Any())
{
    <a class="btn btn-primary mb-3" style="width:auto" asp-action="CreateRole" asp-controller="administration">Add new role</a>
    foreach (var item in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                Role Id: @item.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
            </div>
            <div class="card-footer">
                <a asp-action="EditRole" asp-controller="Administration" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-primary">Delete</a>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No roles created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">use the Button below to cretae a role</h5>
            <a asp-action="CreateRole" asp-controller="Administration" class="btn btn-primary" style="width:auto">Create Role</a>
        </div>
    </div>
}