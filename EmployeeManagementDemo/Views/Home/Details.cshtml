@model HomeDetailsViewModel

@{
    ViewBag.Title = "Details Page";
    var photoPath = "~/images/" + (Model.Employee.PhotoPath ?? "fool.jpg");
}

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Employee.Name</h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top " src="@photoPath" asp-append-version="true" />

                <h4>Employee ID: @Model.Employee.ID</h4>
                <h4>Employee Email: @Model.Employee.Email</h4>
                <h4>Employee Department: @Model.Employee.Department</h4>
            </div>

            <div class="card-footer text-center">
                <a href="/Home/Index" class="btn btn-primary">Back</a>
                <a asp-action="edit" asp-controller="home" asp-route-id="@Model.Employee.ID" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/Custom_Script.js"></script>
}
